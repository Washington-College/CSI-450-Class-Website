{
  "name": "Student Portfolio - Quarto Website",
  "image": "ghcr.io/mcanouil/quarto-codespaces:latest",
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {
      "version": "release"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "quarto.quarto",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "REditorSupport.r"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/python/current/bin/python3"
      }
    }
  },
  "postCreateCommand": "pip install -r requirements.txt && quarto check"
}
